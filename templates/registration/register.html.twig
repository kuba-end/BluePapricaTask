{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block content %}
    <div class="h-screen ">
        <div class="flex justify-center py-10 items-center bg-white">
            <div class="bg-white">
                <h1 class="text-gray-800 font-bold text-2xl mb-1">Welcome</h1>
                <p class="text-sm font-normal text-gray-600 mb-7">Register form</p>
                <div class="flex items-center border-2 py-2 px-3 rounded-2xl mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg>
                    {{ form_start(registrationForm) }}
                    <div class="pl-2 outline-none border-none">
                        {{ form_row(registrationForm.email) }}
                    </div>
                </div>
                <div class="flex items-start border-2 py-2 px-3 rounded-2xl">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                         fill="currentColor">
                        <path fill-rule="evenodd"
                              d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                              clip-rule="evenodd" />
                    </svg>
                    <div >
                        {{ form_row(registrationForm.plainPassword, {
                            row_class: "pl-2 outline-none border-none",
                            label: 'Password'
                        }) }}
                    </div>
                </div>
                {{ form_row(registrationForm.agreeTerms) }}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button type="submit" class="block w-full bg-indigo-600 mt-4 py-2 rounded-2xl text-white font-semibold mb-2">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
